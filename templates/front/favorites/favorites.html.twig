{% extends 'base.html.twig' %}

{% block title %}Gestion des favoris
{% endblock %}
{% block nav_active_favorites %}active
{% endblock %}

{% block body %}
	<!-- main -->

<div class="container-xl bg-light p-5 border-top">

    <div class="row mb-2">

        <h2 class="text-muted fw-bold mb-4">Ma liste</h2>

        {% for key, favorite in app.session.get('favorites') %}

            <div class="col-6">

                <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm bg-white position-relative">
                    <div class="col-4 movie__poster" style="background-image: url({{ favorite.poster }});">
                        <img src="{{ asset('images/poster-placeholder.png') }}" class="img-fluid">
                    </div>
                    <div class="col-8 p-4 d-flex flex-column position-static">
                        {{ include('front/favorites/_bookmark.html.twig') }}	
                        <strong class="d-inline-block mb-2 text-primary">{{ favorite.type }}</strong>
                        <h3 class="mb-1">{{ favorite.title }}</h3>
                        <div class="mb-1 text-muted">{{ favorite.duration }}
                            min</div>
                        <a href="{{ path('front_main_show',  {slug: key}) }}" class="fs-1 mt-3 text-danger align-self-start">
                            <i class="bi bi-arrow-right-square"></i>
                        </a>
                    </div>
                </div>

            </div>
        {% else %}
            <div class="col-6">
                Aucun favori enregistr√©
            </div>
        {% endfor %}

        <div class="col">
            <a href="{{ path('front_favorites_empty') }}" class="btn btn-danger btn-sm" onclick="return confirm('Vider votre liste de favoris ?');">Vider la liste</a>
        </div>

    </div>
</div>

{% endblock %}
